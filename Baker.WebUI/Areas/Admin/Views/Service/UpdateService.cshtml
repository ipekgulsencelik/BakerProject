@model Baker.WebUI.CQRS.Results.ServiceResults.GetServiceByIdQueryResult

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <h1>Hizmet Güncelleme</h1>
    <br />
    <form method="post" asp-controller="Service" asp-action="UpdateService">
        <input type="hidden" asp-for="ID" class="form form-control" />
        <input type="hidden" asp-for="OfferID" class="form form-control" />
        <label>ID</label>
        <input type="text" asp-for="ID" disabled class="form form-control" />
        <br />
        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" />
        <br />
        <label>Açıklama</label>
        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
        <br />
        <label>İkon</label>
        <input type="text" asp-for="Icon" class="form-control" />
        <br />
        <input asp-for="IsHome" type="checkbox" />
        <label for="IsHome">Ana Sayfa</label>
        <br />
        <input asp-for="Status" type="checkbox" />
        <label for="Status">Durum</label>
        <br />
        <br />
        <button class="btn btn-success" type="submit"><i class="fas fa-save"></i> Hizmet Güncelle</button>
    </form>
</div>