@model Baker.WebUI.Mediator.Commands.TestimonialCommands.CreateTestimonialCommand

@{
    ViewData["Title"] = "CreateTestimonial";
}

<h1>Referans Ekleme</h1>
<br />
<form method="post" enctype="multipart/form-data">
    <label>Ad Soyad</label>
    <input type="text" asp-for="TestimonialFullName" class="form-control" />
    <br />
    <label>Ünvan</label>
    <input type="text" asp-for="TestimonialTitle" class="form-control" />
    <br />
    <label>Referans Görseli</label>
    <br />
    <input type="file" name="image" />
    <br />
    <br />
    <label>Yorum</label>
    <textarea asp-for="TestimonialComment" rows="5" class="form-control"></textarea>
    <br />
    <input id="IsHome" asp-for="IsHome" type="checkbox" />
    <label for="IsHome">Ana Sayfa</label>
    <br />
    <br />
    <input id="Status" asp-for="Status" type="checkbox" />
    <label for="Status">Durum</label>
    <br />
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>